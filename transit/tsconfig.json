{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
    ]
}